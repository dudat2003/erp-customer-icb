// Datasource & Generator
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Models
model Customer {
  id           String   @id @default(cuid())
  customerCode String   @unique
  name         String
  taxCode      String?
  businessLicenseDate String?
  representative String?
  position     String?
  email        String?
  phone        String?
  category     String?
  address      String?
  assignedTo   String?
  createdBy    String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([category])
}

model Template {
  id           String   @id @default(cuid())
  name         String   @unique
  description  String?
  fileName     String?
  placeholders String[]
  content      String?  // HTML content for placeholder replacement
  fileBase64   String?  // Original .docx file in base64 for preview
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Staff {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  role      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


