                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"customerCode\": \"KH001\",\n  \"name\": \"Duplicate Code Test\",\n  \"taxCode\": \"9999999999\",\n  \"businessLicenseDate\": \"2024-01-01\",\n  \"representative\": \"Test User\",\n  \"position\": \"Test Position\",\n  \"email\": \"duplicate@test.com\",\n  \"phone\": \"0999999999\",\n  \"address\": \"Test Address\",\n  \"category\": \"potential\",\n  \"assignedTo\": \"1\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/customers",
              "host": ["{{baseUrl}}"],
              "path": ["api", "customers"]
            },
            "description": "Test creating customer with existing customer code (should return 400 error)"
          },
          "response": []
        },
        {
          "name": "Test Customer Not Found",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/customers/999",
              "host": ["{{baseUrl}}"],
              "path": ["api", "customers", "999"]
            },
            "description": "Test getting non-existent customer (should return 404 error)"
          },
          "response": []
        },
        {
          "name": "Test Duplicate Template Name",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Biểu mẫu đánh giá sơ bộ\",\n  \"fileName\": \"duplicate-test.docx\",\n  \"placeholders\": [\"{Test}\"],\n  \"content\": \"Duplicate template test\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/templates",
              "host": ["{{baseUrl}}"],
              "path": ["api", "templates"]
            },
            "description": "Test creating template with existing name (should return 400 error)"
          },
          "response": []
        }
      ],
      "description": "Test error scenarios and edge cases"
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Set timestamp for unique data",
          "pm.globals.set(\"timestamp\", Date.now());"
        ]
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "description": "Base URL for the ICB ERP API"
    }
  ]
}
